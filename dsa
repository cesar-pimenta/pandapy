upstream django {
    server unix:///home/cesarpimentajs/pandapy/pandapy/mysite.sock; 
}

server {
    listen      80;
    server_name example.com;
    charset     utf-8;

    client_max_body_size 75M; 

    location /media  {
        alias /home/cesarpimentajs/pandapy/media; 
    }

    location /static {
        alias /home/cesarpimentajs/pandapy/web_site/static;
    }

    location / {
        uwsgi_pass  django;
        include     /home/cesarpimentajs/pandapy/pandapy/uwsgi_params; 
    }
}

[uwsgi]
chdir           = /home/cesarpimentajs/pandapy/pandapy
module          = pandapy.wsgi
home            = /home/cesarpimentajs/venv
master          = true
processes       = 10
socket          = /home/cesarpimentajs/pandapy/pandapy/mysite.sock
vacuum          = true
chmod-socket    = 666


[Unit]
Description=Django VPS uWSGI Emperor
After=syslog.target

[Service]
ExecStart=/home/cesarpimentajs/venv/bin/uwsgi --emperor /etc/uwsgi/vassals --uid www-data --gid www-data
RuntimeDirectory=uwsgi
Restart=always
KillSignal=SIGQUIT
Type=notify
StandardError=syslog
NotifyAccess=all
User=cesarpimentajs

[Install]
WantedBy=multi-user.target
======

sudo chmod 664 /etc/systemd/system/djangovps.service

sudo systemctl daemon-reload

sudo systemctl enable djangovps.service

 sudo systemctl start djangovps.service

 sudo systemctl status djangovps.service

journalctl -u djangovps.service